<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.senani.posapp.UpdateItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Item"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title_back"
        android:textColor="#fff"
        android:padding="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textColor="#000000"
            android:id="@+id/tvcode"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvcode"
            android:id="@+id/editcode"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/tvcode"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_next"
            android:textColor="#fff"
            android:id="@+id/btnsearch"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@+id/editcode"
            android:textColor="#000000"
            android:id="@+id/tvname"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvname"
            android:id="@+id/editname"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Limit"
            android:layout_below="@+id/editname"
            android:textColor="#000000"
            android:id="@+id/tvlimit"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvlimit"
            android:id="@+id/editlimit"
            android:layout_marginTop="10dp"
            android:inputType="number"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            android:layout_below="@+id/editlimit"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_selector2"
            android:textColor="#fff"
            android:id="@+id/btnadd"
            />

    </RelativeLayout>


</RelativeLayout>
